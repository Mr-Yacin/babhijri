# ============================================
# Firebase Configuration (REQUIRED)
# ============================================
# Get these from Firebase Console: https://console.firebase.google.com/
# 1. Go to Project Settings > General
# 2. Scroll to "Your apps" section
# 3. Copy the config values

PUBLIC_FIREBASE_API_KEY=your_api_key
PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
PUBLIC_FIREBASE_PROJECT_ID=your_project_id
PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
PUBLIC_FIREBASE_APP_ID=your_app_id

# ============================================
# EmailJS Configuration (OPTIONAL)
# ============================================
# For contact form email notifications
# Get these from https://dashboard.emailjs.com/
# 1. Create an account and email service
# 2. Create an email template
# 3. Copy your Public Key, Service ID, and Template ID

PUBLIC_EMAILJS_PUBLIC_KEY=your_emailjs_public_key
PUBLIC_EMAILJS_SERVICE_ID=your_emailjs_service_id
PUBLIC_EMAILJS_TEMPLATE_ID=your_emailjs_template_id

# ============================================
# Google Analytics 4 Configuration (OPTIONAL)
# ============================================
# For tracking user behavior and engagement
# Get your measurement ID from https://analytics.google.com/
# 1. Create a GA4 property
# 2. Go to Admin > Data Streams
# 3. Copy your Measurement ID (format: G-XXXXXXXXXX)
# 
# Features:
# - Automatic page view tracking
# - Custom event tracking
# - Privacy-compliant (excludes admin/login pages)
# - Consent banner for user privacy
#
# Set PUBLIC_GA4_ENABLED=false to disable analytics

PUBLIC_GA4_MEASUREMENT_ID=G-XXXXXXXXXX
PUBLIC_GA4_ENABLED=true

# ============================================
# Google AdSense Configuration (OPTIONAL)
# ============================================
# For displaying ads and generating revenue
# Get your publisher ID from https://www.google.com/adsense/
# 1. Apply for AdSense account and get approved
# 2. Go to Account > Settings
# 3. Copy your Publisher ID (format: ca-pub-XXXXXXXXXXXXXXXX)
# 4. Create ad units in AdSense dashboard
# 5. Use ad slot IDs in your page components
#
# Features:
# - Responsive ad units
# - Professional in-content styling
# - Route-based filtering (excludes admin/login pages)
# - Automatic collapse when ads fail to load
#
# Set PUBLIC_ADSENSE_ENABLED=false to disable ads

PUBLIC_ADSENSE_PUBLISHER_ID=ca-pub-XXXXXXXXXXXXXXXX
PUBLIC_ADSENSE_ENABLED=true

