---
import { SITE_CONFIG, NAV_LINKS } from "../../config";
import UserMenu from "../auth/UserMenu.svelte";
import MobileNav from "./MobileNav.svelte";
import MessageNotificationBadge from "./MessageNotificationBadge.svelte";
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4 h-16 flex items-center justify-between">
    <!-- Logo -->
    <a
      href="/"
      class="text-2xl font-bold text-teal-700 hover:text-teal-800 transition-colors"
    >
      {SITE_CONFIG.name}
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-6">
      {
        NAV_LINKS.map((link) => (
          <a
            href={link.href}
            class="text-gray-600 hover:text-teal-600 font-medium transition-colors"
          >
            {link.translation}
          </a>
        ))
      }
      <!-- Messages Link with Notification Badge -->
      <a
        href="/app/messages"
        class="relative text-gray-600 hover:text-teal-600 font-medium transition-colors"
      >
        الرسائل
        <MessageNotificationBadge client:load />
      </a>
      <UserMenu client:load />
    </nav>

    <!-- Mobile Nav -->
    <MobileNav client:load navLinks={NAV_LINKS} />
  </div>
</header>
