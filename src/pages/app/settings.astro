---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/common/Header.astro";
import Footer from "../../components/common/Footer.astro";
import { SITE_CONFIG } from "../../config";
---

<Layout title={`الإعدادات | ${SITE_CONFIG.name}`}>
    <Header />

    <main class="min-h-screen bg-gray-50" dir="rtl">
        <!-- Page Header -->
        <section
            class="bg-gradient-to-r from-gray-900 to-gray-700 text-white py-12"
        >
            <div class="container mx-auto px-4">
                <h1 class="text-3xl md:text-4xl font-bold mb-2">الإعدادات</h1>
                <p class="text-gray-300 text-lg">إدارة حسابك وتفضيلاتك</p>
            </div>
        </section>

        <!-- Settings Content -->
        <div class="container mx-auto px-4 py-8 max-w-4xl">
            <!-- Success Message -->
            <div
                id="success-message"
                class="hidden mb-6 bg-green-50 border border-green-200 text-green-800 px-6 py-4 rounded-lg flex items-center gap-3"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6 text-green-600"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                </svg>
                <span>تم حفظ الإعدادات بنجاح</span>
            </div>

            <!-- Account Settings -->
            <div
                class="bg-white rounded-xl shadow-sm border border-gray-100 mb-6"
            >
                <div class="p-6 border-b border-gray-100">
                    <h2
                        class="text-xl font-bold text-gray-900 flex items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6 text-gray-600"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                            ></path>
                        </svg>
                        معلومات الحساب
                    </h2>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label
                            class="block text-sm font-medium text-gray-700 mb-2"
                        >
                            البريد الإلكتروني
                        </label>
                        <input
                            type="email"
                            id="user-email"
                            readonly
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-600 cursor-not-allowed"
                            value="loading..."
                        />
                        <p class="text-xs text-gray-500 mt-1">
                            لا يمكن تغيير البريد الإلكتروني حالياً
                        </p>
                    </div>
                    <div>
                        <label
                            class="block text-sm font-medium text-gray-700 mb-2"
                        >
                            تاريخ إنشاء الحساب
                        </label>
                        <input
                            type="text"
                            id="account-created"
                            readonly
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-600 cursor-not-allowed"
                            value="loading..."
                        />
                    </div>
                </div>
            </div>

            <!-- Profile Visibility -->
            <div
                class="bg-white rounded-xl shadow-sm border border-gray-100 mb-6"
            >
                <div class="p-6 border-b border-gray-100">
                    <h2
                        class="text-xl font-bold text-gray-900 flex items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6 text-gray-600"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                            ></path>
                        </svg>
                        ظهور الملف الشخصي
                    </h2>
                </div>
                <div class="p-6">
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <h3 class="font-semibold text-gray-900 mb-1">
                                تفعيل الملف الشخصي
                            </h3>
                            <p class="text-sm text-gray-600">
                                عند التعطيل، لن يظهر ملفك للآخرين ولن تتلقى
                                تطابقات جديدة
                            </p>
                        </div>
                        <label
                            class="relative inline-flex items-center cursor-pointer"
                        >
                            <input
                                type="checkbox"
                                id="profile-active"
                                class="sr-only peer"
                                checked
                            />
                            <div
                                class="w-14 h-7 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-teal-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:start-[4px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-teal-600"
                            >
                            </div>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Notification Preferences -->
            <div
                class="bg-white rounded-xl shadow-sm border border-gray-100 mb-6"
            >
                <div class="p-6 border-b border-gray-100">
                    <h2
                        class="text-xl font-bold text-gray-900 flex items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6 text-gray-600"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                            ></path>
                        </svg>
                        الإشعارات
                    </h2>
                </div>
                <div class="p-6 space-y-4">
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <h3 class="font-semibold text-gray-900 mb-1">
                                إشعارات البريد الإلكتروني
                            </h3>
                            <p class="text-sm text-gray-600">
                                تلقي تحديثات عبر البريد الإلكتروني
                            </p>
                        </div>
                        <label
                            class="relative inline-flex items-center cursor-pointer"
                        >
                            <input
                                type="checkbox"
                                id="email-notifications"
                                class="sr-only peer"
                                checked
                            />
                            <div
                                class="w-14 h-7 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-teal-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:start-[4px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-teal-600"
                            >
                            </div>
                        </label>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <h3 class="font-semibold text-gray-900 mb-1">
                                إشعارات التطابقات
                            </h3>
                            <p class="text-sm text-gray-600">
                                تلقي إشعارات عند وجود تطابقات جديدة
                            </p>
                        </div>
                        <label
                            class="relative inline-flex items-center cursor-pointer"
                        >
                            <input
                                type="checkbox"
                                id="match-notifications"
                                class="sr-only peer"
                                checked
                            />
                            <div
                                class="w-14 h-7 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-teal-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:start-[4px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-teal-600"
                            >
                            </div>
                        </label>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <h3 class="font-semibold text-gray-900 mb-1">
                                إشعارات الرسائل
                            </h3>
                            <p class="text-sm text-gray-600">
                                تلقي إشعارات عند وصول رسائل جديدة
                            </p>
                        </div>
                        <label
                            class="relative inline-flex items-center cursor-pointer"
                        >
                            <input
                                type="checkbox"
                                id="message-notifications"
                                class="sr-only peer"
                                checked
                            />
                            <div
                                class="w-14 h-7 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-teal-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:start-[4px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-teal-600"
                            >
                            </div>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Privacy Settings -->
            <div
                class="bg-white rounded-xl shadow-sm border border-gray-100 mb-6"
            >
                <div class="p-6 border-b border-gray-100">
                    <h2
                        class="text-xl font-bold text-gray-900 flex items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6 text-gray-600"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                            ></path>
                        </svg>
                        الخصوصية
                    </h2>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label
                            class="block text-sm font-medium text-gray-700 mb-2"
                        >
                            من يمكنه رؤية ملفي الشخصي
                        </label>
                        <select
                            id="profile-visibility"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
                        >
                            <option value="everyone">الجميع</option>
                            <option value="matches">التطابقات فقط</option>
                        </select>
                        <p class="text-xs text-gray-500 mt-1">
                            اختر من يمكنه مشاهدة ملفك الشخصي الكامل
                        </p>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <h3 class="font-semibold text-gray-900 mb-1">
                                إظهار حالة الاتصال
                            </h3>
                            <p class="text-sm text-gray-600">
                                السماح للآخرين برؤية ما إذا كنت متصلاً
                            </p>
                        </div>
                        <label
                            class="relative inline-flex items-center cursor-pointer"
                        >
                            <input
                                type="checkbox"
                                id="show-online-status"
                                class="sr-only peer"
                                checked
                            />
                            <div
                                class="w-14 h-7 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-teal-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:start-[4px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-teal-600"
                            >
                            </div>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Language Preferences -->
            <div
                class="bg-white rounded-xl shadow-sm border border-gray-100 mb-6"
            >
                <div class="p-6 border-b border-gray-100">
                    <h2
                        class="text-xl font-bold text-gray-900 flex items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6 text-gray-600"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"
                            ></path>
                        </svg>
                        اللغة
                    </h2>
                </div>
                <div class="p-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        لغة الواجهة
                    </label>
                    <select
                        id="language"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
                    >
                        <option value="ar">العربية</option>
                        <option value="en">English</option>
                    </select>
                    <p class="text-xs text-gray-500 mt-1">
                        اختر لغة عرض التطبيق (قريباً)
                    </p>
                </div>
            </div>

            <!-- Danger Zone -->
            <div
                class="bg-red-50 rounded-xl shadow-sm border border-red-200 mb-6"
            >
                <div class="p-6 border-b border-red-200">
                    <h2
                        class="text-xl font-bold text-red-900 flex items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6 text-red-600"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                            ></path>
                        </svg>
                        منطقة الخطر
                    </h2>
                </div>
                <div class="p-6">
                    <div class="flex items-start justify-between gap-4">
                        <div class="flex-1">
                            <h3 class="font-semibold text-red-900 mb-1">
                                حذف الحساب
                            </h3>
                            <p class="text-sm text-red-700">
                                حذف حسابك نهائياً وجميع بياناتك. هذا الإجراء لا
                                يمكن التراجع عنه.
                            </p>
                        </div>
                        <button
                            id="delete-account-btn"
                            class="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors font-semibold whitespace-nowrap"
                        >
                            حذف الحساب
                        </button>
                    </div>
                </div>
            </div>

            <!-- Save Button -->
            <div
                class="sticky bottom-4 bg-white rounded-xl shadow-lg border border-gray-200 p-4"
            >
                <div class="flex items-center justify-between gap-4">
                    <p class="text-sm text-gray-600">
                        تأكد من حفظ التغييرات قبل المغادرة
                    </p>
                    <button
                        id="save-settings-btn"
                        class="px-8 py-3 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition-colors font-semibold flex items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                        حفظ التغييرات
                    </button>
                </div>
            </div>
        </div>
    </main>

    <Footer />
</Layout>

<!-- Delete Confirmation Modal -->
<div
    id="delete-modal"
    class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4"
    dir="rtl"
>
    <div class="bg-white rounded-xl max-w-md w-full p-6 shadow-2xl">
        <div class="flex items-start gap-4 mb-4">
            <div
                class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center flex-shrink-0"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6 text-red-600"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                    ></path>
                </svg>
            </div>
            <div class="flex-1">
                <h3 class="text-xl font-bold text-gray-900 mb-2">
                    تأكيد حذف الحساب
                </h3>
                <p class="text-gray-600 mb-4">
                    هل أنت متأكد من رغبتك في حذف حسابك؟ سيتم حذف جميع بياناتك
                    بشكل نهائي ولن تتمكن من استعادتها.
                </p>
                <div
                    class="bg-red-50 border border-red-200 rounded-lg p-3 mb-4"
                >
                    <p class="text-sm text-red-800 font-semibold">سيتم حذف:</p>
                    <ul class="text-sm text-red-700 mt-2 space-y-1">
                        <li>• ملفك الشخصي وجميع الصور</li>
                        <li>• جميع التطابقات والمحادثات</li>
                        <li>• سجل النشاط والإحصائيات</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="flex gap-3">
            <button
                id="cancel-delete-btn"
                class="flex-1 px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition-colors font-semibold"
            >
                إلغاء
            </button>
            <button
                id="confirm-delete-btn"
                class="flex-1 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors font-semibold"
            >
                نعم، احذف حسابي
            </button>
        </div>
    </div>
</div>

<script>
    import { authStore } from "../../lib/stores/auth";
    import { ProfileService } from "../../lib/services/profile";
    import { auth } from "../../lib/firebase";
    import { deleteUser } from "firebase/auth";

    const els = {
        userEmail: document.getElementById("user-email") as HTMLInputElement,
        accountCreated: document.getElementById(
            "account-created",
        ) as HTMLInputElement,
        profileActive: document.getElementById(
            "profile-active",
        ) as HTMLInputElement,
        emailNotifications: document.getElementById(
            "email-notifications",
        ) as HTMLInputElement,
        matchNotifications: document.getElementById(
            "match-notifications",
        ) as HTMLInputElement,
        messageNotifications: document.getElementById(
            "message-notifications",
        ) as HTMLInputElement,
        profileVisibility: document.getElementById(
            "profile-visibility",
        ) as HTMLSelectElement,
        showOnlineStatus: document.getElementById(
            "show-online-status",
        ) as HTMLInputElement,
        language: document.getElementById("language") as HTMLSelectElement,
        saveBtn: document.getElementById("save-settings-btn"),
        deleteBtn: document.getElementById("delete-account-btn"),
        deleteModal: document.getElementById("delete-modal"),
        cancelDeleteBtn: document.getElementById("cancel-delete-btn"),
        confirmDeleteBtn: document.getElementById("confirm-delete-btn"),
        successMessage: document.getElementById("success-message"),
    };

    let currentUid: string | null = null;

    // Load user data and settings
    authStore.subscribe(async (state) => {
        if (state.user) {
            currentUid = state.user.uid;

            // Set email
            if (els.userEmail) {
                els.userEmail.value = state.user.email || "";
            }

            // Set account creation date
            if (els.accountCreated && state.user.metadata.creationTime) {
                const date = new Date(state.user.metadata.creationTime);
                els.accountCreated.value = date.toLocaleDateString("ar-EG", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                });
            }

            try {
                // Get profile to check active status
                const profile = await ProfileService.getProfile(state.user.uid);
                if (profile && els.profileActive) {
                    els.profileActive.checked = profile.isActive;
                }

                // Get user settings
                const settings = await ProfileService.getUserSettings(
                    state.user.uid,
                );

                if (els.emailNotifications)
                    els.emailNotifications.checked =
                        settings.emailNotifications;
                if (els.matchNotifications)
                    els.matchNotifications.checked =
                        settings.matchNotifications;
                if (els.messageNotifications)
                    els.messageNotifications.checked =
                        settings.messageNotifications;
                if (els.profileVisibility)
                    els.profileVisibility.value = settings.profileVisibility;
                if (els.showOnlineStatus)
                    els.showOnlineStatus.checked = settings.showOnlineStatus;
                if (els.language) els.language.value = settings.language;
            } catch (error) {
                console.error("Error loading settings:", error);
            }
        } else if (!state.loading) {
            window.location.href = "/app/login";
        }
    });

    // Save settings
    if (els.saveBtn) {
        els.saveBtn.addEventListener("click", async () => {
            if (!currentUid) return;

            try {
                // Update profile visibility
                if (els.profileActive) {
                    await ProfileService.updateProfileVisibility(
                        currentUid,
                        els.profileActive.checked,
                    );
                }

                // Update settings
                await ProfileService.updateUserSettings(currentUid, {
                    emailNotifications: els.emailNotifications?.checked ?? true,
                    matchNotifications: els.matchNotifications?.checked ?? true,
                    messageNotifications:
                        els.messageNotifications?.checked ?? true,
                    profileVisibility:
                        (els.profileVisibility?.value as
                            | "everyone"
                            | "matches") || "everyone",
                    showOnlineStatus: els.showOnlineStatus?.checked ?? true,
                    language: (els.language?.value as "ar" | "en") || "ar",
                });

                // Show success message
                if (els.successMessage) {
                    els.successMessage.classList.remove("hidden");
                    setTimeout(() => {
                        els.successMessage?.classList.add("hidden");
                    }, 3000);
                }

                // Scroll to top to show message
                window.scrollTo({ top: 0, behavior: "smooth" });
            } catch (error) {
                console.error("Error saving settings:", error);
                alert("حدث خطأ أثناء حفظ الإعدادات. يرجى المحاولة مرة أخرى.");
            }
        });
    }

    // Delete account modal
    if (els.deleteBtn && els.deleteModal) {
        els.deleteBtn.addEventListener("click", () => {
            els.deleteModal?.classList.remove("hidden");
        });
    }

    if (els.cancelDeleteBtn && els.deleteModal) {
        els.cancelDeleteBtn.addEventListener("click", () => {
            els.deleteModal?.classList.add("hidden");
        });
    }

    if (els.confirmDeleteBtn) {
        els.confirmDeleteBtn.addEventListener("click", async () => {
            if (!currentUid) return;

            try {
                // Delete profile from Firestore
                await ProfileService.deleteProfile(currentUid);

                // Delete user from Firebase Auth
                const user = auth.currentUser;
                if (user) {
                    await deleteUser(user);
                }

                // Redirect to home
                window.location.href = "/";
            } catch (error: any) {
                console.error("Error deleting account:", error);

                // Check if re-authentication is required
                if (error.code === "auth/requires-recent-login") {
                    alert(
                        "لحذف حسابك، يجب عليك تسجيل الدخول مرة أخرى أولاً. سيتم تسجيل خروجك الآن.",
                    );
                    window.location.href = "/app/login";
                } else {
                    alert("حدث خطأ أثناء حذف الحساب. يرجى المحاولة مرة أخرى.");
                }
            }
        });
    }

    // Close modal when clicking outside
    if (els.deleteModal) {
        els.deleteModal.addEventListener("click", (e) => {
            if (e.target === els.deleteModal) {
                els.deleteModal?.classList.add("hidden");
            }
        });
    }
</script>
