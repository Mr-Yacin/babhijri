---
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/common/Footer.astro';
import { SITE_CONFIG } from '../../config';
import SignupForm from '../../components/auth/SignupForm.svelte';
---

<Layout title={`إنشاء حساب | ${SITE_CONFIG.name}`}>
	<main class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
		<div class="max-w-md w-full space-y-8 bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
			<div class="text-center">
				<h2 class="mt-6 text-3xl font-extrabold text-gray-900">
					انضم إلى {SITE_CONFIG.name}
				</h2>
				<p class="mt-2 text-sm text-gray-600">
					أنشئ حسابك الجديد
				</p>
			</div>
			
			<SignupForm client:load />
		</div>
	</main>

	<Footer />
</Layout>
