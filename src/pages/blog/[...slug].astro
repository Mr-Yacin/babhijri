---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/common/Header.astro";
import Footer from "../../components/common/Footer.astro";

export async function getStaticPaths() {
	const posts = await getCollection("blog");
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
	<Header />

	<main class="min-h-screen bg-gray-50">
		<!-- Article Header -->
		<section
			class="bg-gradient-to-r from-teal-900 to-teal-700 text-white py-16"
		>
			<div class="container mx-auto px-4 max-w-4xl">
				<div class="flex gap-2 mb-4 justify-center flex-wrap">
					{
						post.data.tags.map((tag) => (
							<span class="text-xs bg-white/20 text-white px-3 py-1 rounded-full font-medium backdrop-blur-sm">
								{tag}
							</span>
						))
					}
				</div>
				<h1
					class="text-3xl md:text-5xl font-bold mb-6 text-center leading-tight"
				>
					{post.data.title}
				</h1>
				<div
					class="flex items-center justify-center gap-4 text-teal-100"
				>
					<span class="font-medium">{post.data.author}</span>
					<span>•</span>
					<time datetime={post.data.pubDate.toISOString()}>
						{
							post.data.pubDate.toLocaleDateString("ar-EG", {
								year: "numeric",
								month: "long",
								day: "numeric",
							})
						}
					</time>
				</div>
			</div>
		</section>

		<!-- Article Content -->
		<section class="py-12">
			<div class="container mx-auto px-4">
				<article
					class="max-w-4xl mx-auto bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden"
				>
					{
						post.data.heroImage && (
							<img
								src={post.data.heroImage}
								alt={post.data.title}
								class="w-full h-64 md:h-96 object-cover"
							/>
						)
					}

					<div class="p-8 md:p-12">
						<div
							class="prose prose-lg prose-teal max-w-none text-gray-800"
						>
							<Content />
						</div>
					</div>
				</article>

				<!-- Back to Blog Link -->
				<div class="max-w-4xl mx-auto mt-8">
					<a
						href="/blog"
						class="inline-flex items-center gap-2 text-teal-600 hover:text-teal-700 font-semibold transition-colors"
					>
						<svg
							class="w-5 h-5"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M15 19l-7-7 7-7"></path>
						</svg>
						العودة إلى المدونة
					</a>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
