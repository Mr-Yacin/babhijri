---
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import { SITE_CONFIG } from '../config';
---

<Layout title={`اتصل بنا | ${SITE_CONFIG.name}`} description="تواصل مع فريق باب الهجرة للحصول على الدعم والمساعدة">
	<Header />
	
	<main class="min-h-screen bg-gray-50">
		<!-- Page Header -->
		<section class="bg-gradient-to-r from-teal-900 to-pink-900 text-white py-16">
			<div class="container mx-auto px-4">
				<h1 class="text-4xl md:text-5xl font-bold mb-4 text-center">اتصل بنا</h1>
				<p class="text-white/90 text-center text-lg max-w-2xl mx-auto">
					نحن هنا لمساعدتك! أرسل لنا رسالة وسنرد عليك في أقرب وقت ممكن
				</p>
			</div>
		</section>

		<section class="py-12">
			<div class="container mx-auto px-4 max-w-6xl">
				<div class="grid md:grid-cols-2 gap-8">
					
					<!-- Contact Form -->
					<div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
						<h2 class="text-2xl font-bold text-gray-900 mb-6">أرسل لنا رسالة</h2>
						
						<form id="contactForm" class="space-y-5">
							<!-- Name -->
							<div>
								<label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
									الاسم الكامل <span class="text-red-500">*</span>
								</label>
								<input
									type="text"
									id="name"
									name="name"
									required
									class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all"
									placeholder="أدخل اسمك الكامل"
								/>
							</div>

							<!-- Email -->
							<div>
								<label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
									البريد الإلكتروني <span class="text-red-500">*</span>
								</label>
								<input
									type="email"
									id="email"
									name="email"
									required
									class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all"
									placeholder="example@email.com"
								/>
							</div>

							<!-- Subject -->
							<div>
								<label for="subject" class="block text-sm font-semibold text-gray-700 mb-2">
									الموضوع <span class="text-red-500">*</span>
								</label>
								<select
									id="subject"
									name="subject"
									required
									class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all"
								>
									<option value="">اختر الموضوع</option>
									<option value="support">دعم فني</option>
									<option value="dating">استفسار عن التعارف</option>
									<option value="immigration">استفسار عن الهجرة</option>
									<option value="account">مشكلة في الحساب</option>
									<option value="feedback">ملاحظات واقتراحات</option>
									<option value="partnership">شراكة أو تعاون</option>
									<option value="other">أخرى</option>
								</select>
							</div>

							<!-- Message -->
							<div>
								<label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
									الرسالة <span class="text-red-500">*</span>
								</label>
								<textarea
									id="message"
									name="message"
									required
									rows="6"
									class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all resize-none"
									placeholder="اكتب رسالتك هنا..."
								></textarea>
							</div>

							<!-- Submit Button -->
							<button
								type="submit"
								class="w-full bg-gradient-to-r from-teal-600 to-pink-600 text-white py-3 px-6 rounded-lg font-bold hover:from-teal-700 hover:to-pink-700 transition-all transform hover:scale-[1.02] active:scale-[0.98]"
							>
								إرسال الرسالة
							</button>

							<!-- Success/Error Messages -->
							<div id="formMessage" class="hidden"></div>
						</form>
					</div>

					<!-- Contact Information -->
					<div class="space-y-6">
						<!-- Contact Info Card -->
						<div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
							<h2 class="text-2xl font-bold text-gray-900 mb-6">معلومات الاتصال</h2>
							
							<div class="space-y-5">
								<!-- Email -->
								<div class="flex items-start gap-4">
									<div class="w-12 h-12 bg-teal-100 rounded-full flex items-center justify-center flex-shrink-0">
										<svg class="w-6 h-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
										</svg>
									</div>
									<div>
										<h3 class="font-semibold text-gray-900 mb-1">البريد الإلكتروني</h3>
										<a href="mailto:info@babhijra.com" class="text-teal-600 hover:text-teal-700">
											info@babhijra.com
										</a>
										<p class="text-sm text-gray-500 mt-1">نرد خلال 24-48 ساعة</p>
									</div>
								</div>

								<!-- Support Email -->
								<div class="flex items-start gap-4">
									<div class="w-12 h-12 bg-pink-100 rounded-full flex items-center justify-center flex-shrink-0">
										<svg class="w-6 h-6 text-pink-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
										</svg>
									</div>
									<div>
										<h3 class="font-semibold text-gray-900 mb-1">الدعم الفني</h3>
										<a href="mailto:support@babhijra.com" class="text-pink-600 hover:text-pink-700">
											support@babhijra.com
										</a>
										<p class="text-sm text-gray-500 mt-1">للمشاكل التقنية</p>
									</div>
								</div>

								<!-- Social Media -->
								<div class="flex items-start gap-4">
									<div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center flex-shrink-0">
										<svg class="w-6 h-6 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
										</svg>
									</div>
									<div>
										<h3 class="font-semibold text-gray-900 mb-2">وسائل التواصل الاجتماعي</h3>
										<div class="flex gap-3">
											<a href="#" class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center hover:bg-teal-500 hover:text-white transition-colors" aria-label="Facebook">
												<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
													<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
												</svg>
											</a>
											<a href="#" class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center hover:bg-teal-500 hover:text-white transition-colors" aria-label="Twitter">
												<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
													<path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
												</svg>
											</a>
											<a href="#" class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center hover:bg-teal-500 hover:text-white transition-colors" aria-label="Instagram">
												<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
													<path d="M12 0C8.74 0 8.333.015 7.053.072 5.775.132 4.905.333 4.14.63c-.789.306-1.459.717-2.126 1.384S.935 3.35.63 4.14C.333 4.905.131 5.775.072 7.053.012 8.333 0 8.74 0 12s.015 3.667.072 4.947c.06 1.277.261 2.148.558 2.913.306.788.717 1.459 1.384 2.126.667.666 1.336 1.079 2.126 1.384.766.296 1.636.499 2.913.558C8.333 23.988 8.74 24 12 24s3.667-.015 4.947-.072c1.277-.06 2.148-.262 2.913-.558.788-.306 1.459-.718 2.126-1.384.666-.667 1.079-1.335 1.384-2.126.296-.765.499-1.636.558-2.913.06-1.28.072-1.687.072-4.947s-.015-3.667-.072-4.947c-.06-1.277-.262-2.149-.558-2.913-.306-.789-.718-1.459-1.384-2.126C21.319 1.347 20.651.935 19.86.63c-.765-.297-1.636-.499-2.913-.558C15.667.012 15.26 0 12 0zm0 2.16c3.203 0 3.585.016 4.85.071 1.17.055 1.805.249 2.227.415.562.217.96.477 1.382.896.419.42.679.819.896 1.381.164.422.36 1.057.413 2.227.057 1.266.07 1.646.07 4.85s-.015 3.585-.074 4.85c-.061 1.17-.256 1.805-.421 2.227-.224.562-.479.96-.899 1.382-.419.419-.824.679-1.38.896-.42.164-1.065.36-2.235.413-1.274.057-1.649.07-4.859.07-3.211 0-3.586-.015-4.859-.074-1.171-.061-1.816-.256-2.236-.421-.569-.224-.96-.479-1.379-.899-.421-.419-.69-.824-.9-1.38-.165-.42-.359-1.065-.42-2.235-.045-1.26-.061-1.649-.061-4.844 0-3.196.016-3.586.061-4.861.061-1.17.255-1.814.42-2.234.21-.57.479-.96.9-1.381.419-.419.81-.689 1.379-.898.42-.166 1.051-.361 2.221-.421 1.275-.045 1.65-.06 4.859-.06l.045.03zm0 3.678c-3.405 0-6.162 2.76-6.162 6.162 0 3.405 2.76 6.162 6.162 6.162 3.405 0 6.162-2.76 6.162-6.162 0-3.405-2.76-6.162-6.162-6.162zM12 16c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4zm7.846-10.405c0 .795-.646 1.44-1.44 1.44-.795 0-1.44-.646-1.44-1.44 0-.794.646-1.439 1.44-1.439.793-.001 1.44.645 1.44 1.439z"/>
												</svg>
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>

						<!-- FAQ Link Card -->
						<div class="bg-gradient-to-br from-teal-50 to-pink-50 rounded-2xl border border-teal-200 p-8">
							<div class="flex items-start gap-4">
								<div class="w-12 h-12 bg-white rounded-full flex items-center justify-center flex-shrink-0">
									<svg class="w-6 h-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
									</svg>
								</div>
								<div>
									<h3 class="font-bold text-gray-900 mb-2">هل لديك سؤال سريع؟</h3>
									<p class="text-gray-700 mb-4">تحقق من صفحة الأسئلة الشائعة، قد تجد إجابتك هناك!</p>
									<a 
										href="/help" 
										class="inline-flex items-center gap-2 text-teal-600 hover:text-teal-700 font-semibold"
									>
										<span>زيارة مركز المساعدة</span>
										<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
										</svg>
									</a>
								</div>
							</div>
						</div>

						<!-- Response Time Info -->
						<div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
							<h3 class="font-semibold text-gray-900 mb-3">وقت الاستجابة</h3>
							<ul class="space-y-2 text-sm text-gray-600">
								<li class="flex items-center gap-2">
									<svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
									</svg>
									<span>الدعم الفني: 24-48 ساعة</span>
								</li>
								<li class="flex items-center gap-2">
									<svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
									</svg>
									<span>الاستفسارات العامة: 2-3 أيام</span>
								</li>
								<li class="flex items-center gap-2">
									<svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
									</svg>
									<span>الشراكات: 3-5 أيام</span>
								</li>
							</ul>
						</div>
					</div>

				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>


<script src="../scripts/contactForm.ts"></script>

